// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id       Int    @id @default(autoincrement())
  name     String
  password String
  role     Role   @default(SUPERVISOR)
}

enum Role {
  SUPERVISOR
  ADMIN
  STUDENT
}

model Student {
  id           Int      @id @default(autoincrement())
  name         String
  firstName    String
  email        String
  birthday     DateTime
  nationnality String
  contact      String?
  phone        String?
  Files        Files?   @relation(fields: [filesId], references: [id])
  filesId      Int?
  Study        Study?   @relation(fields: [studyId], references: [id])
  studyId      Int?
  Year         Year?    @relation(fields: [yearId], references: [id])
  yearId       Int?
}

model Files {
  id       Int       @id @default(autoincrement())
  path     String
  filename String
  students Student[]
}

model Study {
  id       Int       @id @default(autoincrement())
  name     String
  students Student[]
}

model Year {
  id          Int       @id @default(autoincrement())
  school_year String
  students    Student[]
}
