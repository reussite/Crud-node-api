// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  firstName    String
  email        String
  birthday     DateTime
  nationnality String
  contact      String?
  phone        String?
  password     String
  role         Role
  Files        Files?   @relation(fields: [filesId], references: [id])
  filesId      Int?
  Study        Study?   @relation(fields: [studyId], references: [id])
  studyId      Int?
  Year         Year?    @relation(fields: [yearId], references: [id])
  yearId       Int?
}

enum Role {
  SUPERVISOR
  STUDENT
  ADMIN
}

model Files {
  id       Int    @id @default(autoincrement())
  path     String
  filename String
  users    User[]
}

model Study {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Year {
  id          Int    @id @default(autoincrement())
  school_year String
  users       User[]
}
